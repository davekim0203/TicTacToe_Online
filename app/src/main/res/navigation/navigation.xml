<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@id/play_option_fragment">

    <fragment
        android:id="@+id/play_option_fragment"
        android:name="com.davek.tictactoe.fragments.PlayOptionFragment"
        tools:layout="@layout/fragment_play_option"
        android:label="@string/app_name">

        <action
            android:id="@+id/action_PlayOptionFragment_to_BoardFragment"
            app:destination="@id/board_fragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />

        <action
            android:id="@+id/action_PlayOptionFragment_to_MainOnlineFragment"
            app:destination="@id/main_online_fragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />

    </fragment>

    <fragment
        android:id="@+id/main_online_fragment"
        android:name="com.davek.tictactoe.fragments.MainOnlineFragment"
        tools:layout="@layout/fragment_main_online"
        android:label="@string/app_name">

        <action
            android:id="@+id/action_MainOnlineFragment_to_BoardFragment"
            app:destination="@id/board_fragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />

    </fragment>

    <fragment
        android:id="@+id/board_fragment"
        android:name="com.davek.tictactoe.fragments.BoardFragment"
        tools:layout="@layout/fragment_board"
        android:label="@string/app_name">

        <argument
            android:name="gameId"
            app:argType="string"
            app:nullable="true"
            android:defaultValue="@null" />

        <argument
            android:name="savedGame"
            app:argType="com.davek.tictactoe.models.SavedGame"
            app:nullable="true"
            android:defaultValue="@null" />

    </fragment>

</navigation>